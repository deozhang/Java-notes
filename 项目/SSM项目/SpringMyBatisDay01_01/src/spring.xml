<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
    "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
	<!-- 声明Bean组件 -->
	<bean id="user" class="com.xms.entity.User"/>
	<!-- Bean的作用域 -->
	<bean id="userOne" scope="singleton" class="com.xms.entity.User"/>
	
	<bean id="userTwo" scope="prototype" class="com.xms.entity.User"/>
	
	<!-- Bean的生命周期 -->
	<bean id="exampleBean"
	init-method="init" destroy-method="destroy"
	 class="com.xms.entity.ExampleBean"/>
	
</beans>
